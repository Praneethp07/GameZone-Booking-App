<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="210dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:id="@+id/main_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/gameName"
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:text="Game Name"
                android:textSize="15dp"
                android:paddingLeft="20dp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                />

            <Button
                android:id="@+id/doneBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="done" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/quantum_grey100"
            >

            <TextView
                android:id="@+id/time_slot1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:text="1-3"
                android:textSize="18dp"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                />
            <TextView
                android:id="@+id/duration1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Duration"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                />
            <TextView
                android:id="@+id/booking_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingHorizontal="10dp"
                android:textColor="@color/black"
                android:text="25-12-2002"
                android:gravity="center"
                android:textSize="15dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/email_book"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="praneeth.p101@gmail.com"
                android:textSize="19dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="@color/secondary"
            >
            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:text="$500"
                android:textColor="@color/grey"
                android:textSize="25dp"
                android:paddingLeft="20dp"
                android:gravity="center_vertical"
                />
            <TextView
                android:id="@+id/screen_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1 2 3 4 "
                android:textSize="20dp"
                android:textColor="@color/grey"
                android:paddingLeft="20dp"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/console_det"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/grey"
                android:paddingLeft="20dp"
                android:text="1 2 3 4 "
                android:textSize="20dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>