<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="#9C9C9C"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="FILL THE DETAILS"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:textSize="30dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/form_background_admin"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/selectGamesCard"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textStyle="italic"
            app:cardElevation="10dp"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#D6D6D6"
         >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:hint="Select the games"
                    android:textSize="22dp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="50dp"
                    android:layout_centerVertical="true"
                    android:layout_height="50dp"
                    android:layout_alignParentEnd="true"
                    app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <EditText
            android:id="@+id/screencount"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="screen count"
            android:inputType="number"
            android:textSize="22dp"
            android:textStyle="italic" />


        <EditText
            android:id="@+id/ps5count"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:hint="PS5 count"
            android:inputType="number"
            android:textSize="22dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/ps4count"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:hint="PS4 count"
            android:inputType="number"
            android:textSize="22dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/xboxcount"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:hint="Xbox count"
            android:textSize="22dp"
            android:inputType="number"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/poolcount"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:inputType="number"
            android:hint="8BallPool count"
            android:textSize="22dp"
            android:textStyle="italic" />


    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/cardview_dark_background"
        >
        <TextView
            android:id="@+id/nextbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>
